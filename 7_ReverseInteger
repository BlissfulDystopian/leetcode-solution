class Solution {
public:
    int reverse(int x) {
        long int result = 0;
        while (x != 0) {
            if(!result)
                result = x % 10;
            else {   
                result *= 10;
                result += x % 10;
            }   
            x /= 10;
        }
        return(result < -2147483648 || result > 2147483647) ? 0 : result;
    }
};
